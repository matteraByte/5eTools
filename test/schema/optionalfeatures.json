{
	"$schema": "http://json-schema.org/draft-06/schema#",
	"version": "1.5.1",
	"title": "Optional Features",
	"type": "object",

	"definitions": {
		"prerequisite": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"properties": {
							"type": {"const": "prereqLevel"},
							"level": {
								"type": "integer"
							},
							"class": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"source": {
										"type": "string"
									}
								},
								"required": ["name"],
								"additionalProperties": false
							},
							"subclass": {
								"type": "object",
								"properties": {
									"name": {
										"type": "string"
									},
									"source": {
										"type": "string"
									}
								},
								"required": ["name"],
								"additionalProperties": false
							}
						},
						"required": ["level"],
						"additionalProperties": false
					},
					{
						"properties": {
							"type": {"const": "prereqPact"},
							"entry": {
								"type": "string",
								"enum": [
									"Chain", "Tome", "Blade"
								]
							}
						},
						"required": ["entry"],
						"additionalProperties": false
					},
					{
						"properties": {
							"type": {"const": "prereqPatron"},
							"entry": {
								"type": "string",
								"enum": [
									"The Archfey", "The Fiend", "The Great Old One", "The Hexblade", "The Raven Queen", "The Seeker", "The Kraken"
								]
							}
						},
						"required": ["entry"],
						"additionalProperties": false
					},
					{
						"properties": {
							"type": {"const": "prereqSpell"},
							"entries": {
								"type": "array",
								"items": {
									"$ref": "/Entry"
								}
							}
						},
						"required": ["entries"],
						"additionalProperties": false
					},
					{
						"properties": {
							"type": {"const": "prereqFeature"},
							"entries": {
								"type": "array",
								"items": {
									"$ref": "/Entry"
								}
							}
						},
						"required": ["entries"],
						"additionalProperties": false
					},
					{
						"type": "string"
					}
				]
			}
		},

		"featureType": {
			"type": "string",
			"enum":  ["ED", "EI", "MM", "MV:B", "OTH", "FS:F", "FS:B", "FS:R", "FS:P", "MV:C2-UA", "AS:V1-UA", "AS:V2-UA", "AS", "PB"]
		},

		"optionalfeature": {
			"properties": {
				"name": {
					"type": "string"
				},
				"prerequisite": {
					"$ref": "#/definitions/prerequisite"
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "/Entry"
					}
				},
				"data": {
					"type": "object"
				},
				"source": {
					"type": "string"
				},
				"page": {
					"type": "integer"
				},
				"featureType": {
					"oneOf": [
						{
							"$ref": "#/definitions/featureType"
						},
						{
							"type": "array",
							"items": {
								"$ref": "#/definitions/featureType"
							}
						}
					]
				},
				"otherSources": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"source": {
								"type": "string"
							},
							"page": {
								"type": "integer"
							}
						},
						"required": [
							"source",
							"page"
						],
						"additionalProperties": false
					}
				}
			},
			"required": [
				"name",
				"entries",
				"source",
				"featureType"
			],
			"additionalProperties": false
		}
	},

	"properties": {
		"optionalfeature": {
			"type": "array",
			"items": {"$ref": "#/definitions/optionalfeature"}
		}
	},
	"additionalProperties": false
}
